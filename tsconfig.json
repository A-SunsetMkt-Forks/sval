{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "declarationDir": "types",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}